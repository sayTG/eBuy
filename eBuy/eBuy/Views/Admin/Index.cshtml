@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row form-group">
        <fieldset>
            <legend>Products</legend>
            <div class="col">
                <i class="fas fa-save fa-4x"></i>
                <p>Add/edit the products in your store.</p>
                <span class="nav-item">@Html.ActionLink("Manage Products", "Manage", "Admin")</span>
            </div>
        </fieldset>
    </div>
    <div class="row">
        <fieldset>
            <legend>Orders</legend>
            <div class="col">
                <i class="fa fa-trash fa-4x"></i>
                <p>Products removed before checkout</p>
                <span class="nav-item">@Html.ActionLink("Removed Products", "Removed", "Admin")</span>
            </div>
        </fieldset>
    </div>
</div>